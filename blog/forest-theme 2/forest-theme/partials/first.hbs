{{! Popular articals }}



{{#foreach posts}}


{{#if featured}}


<div class="feature_block container ">
                {{! Main popular artical }}
                <div class="hover"></div>
                <article class="feature_article-one">            
                    <header class="feature_head-one">
                        <span class="article_tag">{{tags}}</span>
                        <h1 class="article_title"><a href="{{url}}">{{{title}}}</a></h1>
                        <p class="feature_textBig">{{excerpt words="30"}}...</p>
                        <span class="article_info">by <a href="#">{{author}}</a> <span>on</span> {{date format="DD MMMM YYYY"}} {{tags}}</span>
                    </header>
                </article>
            </div>


{{/if}}

