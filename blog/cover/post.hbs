{{!< default}}

{{! This is a post template. It displays a single post that the user selected from the home page template. }}

{{! Everything inside the #post tags pulls data from the post }}
{{#post}}

{{#if image}}
<div class="featured-image" style="background-image:url({{image}})">
    <div class="post-info">
        <div class="wrapper">
            {{#if tags}}
				{{#foreach tags}}
					<a class="tag tag-{{name}}" href="{{url}}">{{name}}</a>
				{{/foreach}}
			{{/if}}
            <h1 class="post-title">{{{title}}}</h1>
            <h2 class="post-date">{{date format="MMMM D, YYYY"}}</h2>
        </div>
    </div>
</div>
{{else}}
<div class="wrapper no-image">
    {{#if tags}}
        {{#foreach tags}}
            <a class="tag tag-{{name}}" href="{{url}}">{{name}}</a>
        {{/foreach}}
    {{/if}}
    <h1 class="post-title">{{{title}}}</h1>
    <h2 class="post-date">{{date format="MMMM D, YYYY"}}</h2>
</div>
{{/if}}

<div class="wrapper {{#has tag='one-column'}}one-column{{/has}} {{#has tag='two-column'}}two-column{{/has}}">
    <article class="post-content">
		{{content}}        
    </article> <!-- .post-content -->

    <div class="post-meta">
    	{{#author}}
        <div class="post-author">
        	{{#if image}}
            <a href="{{url}}">
                <div class="author-image" style="background-image:url({{image}})"></div>
            </a>
            <div class="author-info">
            {{ else }}
            <div class="author-info no-author-image">
            {{/if}}
            	<a href="{{url}}" class="author-name">
                	<h3>{{name}}</h3>
                </a>
                {{#if bio}}
                <p class="author-bio">{{bio}}</p>
                {{/if}}
                <!-- <a class="author-posts" href="{{url}}">More <i class="fa fa-chevron-right"></i></a> -->
            </div>
        </div>
        {{/author}}
        <div class="post-share">
            <a class="facebook-share" href="https://www.facebook.com/sharer/sharer.php?u={{url absolute="true"}}" onclick="window.open(this.href, 'facebook-share','width=580,height=296');return false;">
                <i class="fa fa-facebook"></i>
                Share
            </a>
            <a class="twitter-share" href="https://twitter.com/share?text={{encode title}}&amp;url={{url absolute="true"}}" onclick="window.open(this.href, 'twitter-share', 'width=550,height=235');return false;">
                <i class="fa fa-twitter"></i>
                Tweet
            </a>
            <a class="google-plus-share" href="https://plus.google.com/share?url={{url absolute="true"}}" onclick="window.open(this.href, 'google-plus-share', 'width=490,height=530');return false;">
                <i class="fa fa-google-plus"></i>
                +1
            </a>
        </div>
    </div> <!-- .post-meta -->

    <section class="comments">
        <button class="show-comments">Show Comments</button>
        <div id="disqus_thread"></div>
    </section> <!-- .comments -->

</div> <!-- .wrapper -->

<section class="read-next">
    {{#prev_post}}
    <a href="{{url}}" class="prev-post {{^if image}} no-featured-image {{/if}}" {{#if image}} style="background-image:url({{image}})" {{/if}}>
        <div class="info">
            <div class="tag">We recommend</div>
            <h3 class="post-title">{{{title}}}</h3>
        </div>
    </a>
    {{/prev_post}}

    {{#next_post}}
    <a href="{{url}}" class="next-post {{^if image}} no-featured-image {{/if}}" {{#if image}} style="background-image:url({{image}})" {{/if}}>
        <div class="info">
            <div class="tag">You might enjoy</div>
            <h3 class="post-title">{{{title}}}</h3>
        </div>
    </a>
    {{/next_post}}
</section> <!-- .read-next -->

{{/post}}