      <button class="circular ui icon button right floated green" onclick="location.href='sms:16176827760&body=Hey Robinson, could you get me a ticket to the Glassblowing Demonstration?';">
        <i class="icon ticket"></i>
      </button>

      <!--Info Button-->
      <button class="circular ui icon button right floated" onclick="location.href='http://www.joinferris.com/events/275';">
        <i class="icon info"></i>
      </button>
    </div>


    <!--Adventure Image-->
    <div class="ui fluid image adventure-image">
      <%= image_tag ("backpacking.jpg") %>
    </div>
  </div>
</div>