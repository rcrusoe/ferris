<div class="ui secondary fluid three item menu" id="mobile-nav">
  <a class="ui item" href="#">
    <i class="search icon" id="search-icon"></i>
  </a>
  <a class="ui item hidden" href="#">
    <i class="remove icon" id="remove-icon"></i>
  </a>
  <a class="item" href="./">
    <%= image_tag("face.png", :class => "ui centered image mini") %>
  </a>
  <a class="ui item" href="/events/new">
    <i class="plus icon"></i>
  </a>
</div>

<div class="ui secondary menu hidden" id="search-form">
  <div class="centered item">
    <div class="ui icon input">
      <%= form_tag(events_path, :method => "get") do %>
      <%= text_field_tag :search, params[:search], placeholder: "Search Events" %>
      <%= submit_tag "Search" %>
      <% end %>
      <i class="search link icon"></i>
    </div>
  </div>
</div>

<script>
$(document).ready(function(){
    $("#search-icon").click(function(){
        $("#search-icon").addClass('hidden');
        $("div#search-form").removeClass('hidden');
        $("#remove-icon").removeClass('hidden');
    });
    $("#remove-icon").click(function(){
        $("#search-icon").removeClass('hidden');
        $("#search-form").addClass('hidden');
        $("#remove-icon").addClass('hidden');
    });
});
</script>


