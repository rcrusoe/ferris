<div id="new-event-form">
  <div class="ui form">
    <div style="margin-bottom: 2em;">
      <h3 style="text-align: center">
        List My Event
      </h3>
      <p style="font-size: 1em; margin-top: 1em">
        Ferris is a free marketing tool to promote your events to a local, engaged audience in Boston. Every day, hundreds of people text Ferris looking for something to do in Boston. Our human-assisted algorithm will recommend events and venues to people's interests, all through text messaging. All you have to do to have your events promoted is to add them to our database by filling out the form below.
      </p>
    </div>
    <%= simple_form_for @event, html: { multipart: true } do |f| %>
      <%= render 'error_messages' %>
      <div class="field">
        <%= f.label :image %><br>
        <%= f.file_field :image, html: { class: 'form-control' } %>
        <% if f.object.image? %>
            <br />
            <%= image_tag(f.object.image.url(:small)) %><br />
            <em>Currently Uploaded Image</em>
        <% end %>
      </div>
      <div class="field">
        <%= f.label :title, required: false %><br>
        <%= f.text_field :title, class: "ui input" %>
      </div>
      <div class="field">
        <%= f.label :short_blurb, required: false %><br>
        <%= f.text_field :short_blurb, class: "ui input" %>
      </div>
      <div class="field">
        <%= f.label :description, required: false %><br>
        <%= f.text_area :description, class: "ui input" %>
      </div>
      <div class="field">
        <%= f.label :date %><br>
        <%= f.date_select :date %>
      </div>
      <div class="field">
        <%= f.label :start_time %><br>
        <%= f.time_select :start_time, {:minute_step => 15, :ampm => true} %>
      </div>
      <div class="field">
        <%= f.label :end_time %><br>
        <%= f.time_select :end_time, {:minute_step => 15, :ampm => true} %>
      </div>
      <div class="field">
        <%= f.label :recurrence %><br>
        <%= f.select_recurring :recurrence %>
      </div>
      <div class="field">
        <%= f.label 'Place'%><br>
        <%= f.association :place, label: false, collection: Place.order(:name), label_method: :name, value_method: :id, prompt: 'None' %>
      </div>
      <div class="field">
        <%= f.label :address, required: false %>
        <%= f.text_field :address, class: "ui labeled input", :placeholder => "795 Massachusetts Ave, Cambridge, MA 02139" %>
      </div>
      <div class="field">
        <%= f.label :neighborhood %>
        <%= f.select(:neighborhood, ['Alewife', 'Allston', 'Assembly Square', 'Back Bay', 'Beacon Hill', 'Brighton', 'Brookline', 'Central Square', 'Charlestown', 'Chinatown/Leather District', 'Davis Square', 'Dorchester', 'East Boston', 'East Cambridge', 'Faneuil Hall', 'Fenway/Kenmore', 'Fort Point', 'Financial District', 'Harvard Square', 'Inman/Union Square', 'Kendall Square', 'Jamaica Plain', 'Malden', 'Mission Hill', 'North End', 'Porter Square', 'Roxbury', 'Seaport', 'South End', 'South Boston', 'West End', 'Out of the City - Car Required'], {}, { :class => 'ui fluid dropdown' }) %>
      </div>
      <div class="field">
        <%= f.label :website %>
        <div class="ui labeled input">
          <div class="ui label">
            http://
          </div>
          <%= f.text_field :website, :placeholder => "mywebsite.com" %>
        </div>
      </div>
      <div class="field">
        <%= f.label :price %>
        <div class="ui right labeled input">
          <div class="ui label">$</div>
          <%= f.text_field :price, value: 0 %>
          <div class="ui basic label">.00</div>
        </div>
      </div>
      <div class="field">
        <%= f.label :ticket_purchase_link %>
        <div class="ui labeled input">
          <div class="ui label">
            http://
          </div>
          <%= f.text_field :purchase_url, :placeholder => "(optional)" %>
        </div>
      </div>
      <%= f.submit "Create new event", class: "ui blue fluid button", name: 'create' %><br>
      <!--<%= f.submit "Create and add another date", class: "ui blue fluid button", name: 'addDate' %>-->
    <% end %>
  </div>
</div>