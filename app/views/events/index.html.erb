<% provide(:title, ' | Events') %>
<%= render 'shared/header' %>

<div class="ui stackable grid" style="margin-top: 20px">
  <% @event_instances.each do |instance| %>
    <% if instance.date.today? || instance.date.future? %>
      <%= render(:partial => 'shared/eventCard', :locals => {:instance => instance})%>
    <% end %>
  <% end %>
</div>

<%= render 'shared/footer' %>

<script>
  var clipboard = new Clipboard('.copy-to-clipboard');
  clipboard.on('success', function(e) {
    console.info('Action:', e.action);
    console.info('Text:', e.text);
    console.info('Trigger:', e.trigger);

    e.clearSelection();
  });

  clipboard.on('error', function(e) {
      console.error('Action:', e.action);
      console.error('Trigger:', e.trigger);
  });
</script>