<%= render 'event_header' %>
<div class="event-card">
  <div class="ui card">
    <div class="ui fluid image">
      <div class="ui green ribbon label">
        Share: &nbsp
        <a target="_blank" href="https://www.facebook.com/sharer/sharer.php?u=http://www.joinferris.com/events/<%= @event.id %>"><i class="facebook icon"></i></a>
        <a target="_blank" href="https://twitter.com/home?status=%3C%25=%20%40event.title%20%25%3E%3A%20http%3A//www.joinferris.com/events/%3C%25=%20%40event.id%20%25%3E%20via%20%40joinferris%22"><i class="twitter icon"></i></a>
      </div>
      <%= image_tag @event.image.url(:medium) %>
    </div>
    <div class="content">
      <p class="header"><%= @event.title %></p>
      <div class="meta">
        <span class="date"><i class="calendar icon"></i><%= @event.date.strftime("%A, %B %d") %></span>
      </div>
      <div class="meta">
        <span class="date"><i class="wait icon"></i><%= @event.start_time.strftime("%I:%M %p") %> - <%= @event.end_time.strftime("%I:%M %p") %></span>
      </div>
      <div class="description">
        <%= @event.description %>

      </div>
    </div>
    <div class="extra content">
      <a href="http://maps.google.com/?q=<%= @event.address %>" target="_blank">
        <i class="location arrow icon"></i>
        <%= @event.neighborhood %>
      </a>
    </div>
    <div class="extra content">
      <a href="http://<%= @event.website %>" target="_blank">
        <i class="linkify icon"></i>
        <%= @event.website %>
      </a>
    </div>
    <div class="extra content">
      <a href="http://<%= @event.purchase_url %>" target="_blank">
        <i class="dollar icon"></i>
        $<%= @event.price %> entry fee
      </a>
    </div>
    <form action="http://<%= @event.purchase_url %>">
      <button class="ui blue fluid button" type="submit">
        Let's Go!
      </button>
    </form>
  </div>
</div>