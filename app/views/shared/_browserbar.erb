<div class="ui menu fixed">
  <div id="main-menu" class="ui header dropdown icon item">
    <%= image_tag("face.png", :class => "ui centered image mini") %>
    <div class="menu">
      <!-- TODO: if user_role: admin -->
      <%= link_to dashboard_path, class: 'ui icon item' do %>
        <i class="line chart icon"></i>
        Dashboard
      <% end %>
      <div class="item">
        <i class="empty star icon"></i>
        Saved
      </div>
      <div class="item">
        <i class="database icon"></i>
        Collections<div class="ui label" style="margin-left:15px;">12</div>
      </div>
      <div class="item">
        <i class="options icon"></i>
        Settings
      </div>
      <div class="item">
        <i class="alarm outline icon"></i>
        Notifications
      </div>
      <div class="item">
        <i class="payment icon"></i>
        Payment Info
      </div>
      <%= link_to root_url, class: 'ui icon item' do %>
        <i class="comment outline icon" style="margin-right:5px"></i>
        Text Ferris
      <% end %>
    </div>
  </div>
  <!-- DATE RANGE SELECTION -->
  <div class="item">
    <div id="when-select" class="ui floating dropdown labeled icon button basic">
      <i class="calendar icon"></i>
      <span class="text">Next Two Weeks</span>
      <div class="menu">
        <div class="item" data-value="1">
          Today
        </div>
        <div class="item" data-value="2">
          Tomorrow
        </div>
        <div class="item" data-value="3">
          This Week
        </div>
        <div class="item" data-value="4">
          This Weekend
        </div>
        <div class="item" data-value="5">
          Next Two Weeks
        </div>
      </div>
    </div>
  </div>
  <!-- LOCATION SELECTION -->
  <div class="item">
    <div id="where-select" class="ui floating dropdown search labeled icon button basic">
      <i class="marker icon"></i>
      <span class="text">Everywhere</span>
      <div class="menu">
        <div class="item" data-value="-3">
          Boston
        </div>
        <div class="item" data-value="-2">
          Cambridge
        </div>
        <div class="item" data-value="-1">
          Somerville
        </div>
        <div class="divider"></div>
        <% Place.all.order(:neighborhood).pluck(:neighborhood).uniq.each_with_index do |hood, i| %>
          <% unless hood.blank? %>
            <div class="item" data-value=<%= i %>>
              <%= hood %>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
  <!-- CATEGORY SELECTION -->
  <div class="item">
    <div id="categories-select" class="ui dropdown labeled icon button basic multiple search selection" style="max-width: 900px !important;">
      <i class="tags icon"></i>
      <span class="text">All Categories</span>
      <div class="menu">
        <% Category.all.order(:name).uniq.each do |category| %>
          <div class="item" data-value=<%= category.name %>>
          <% if category.icon? %>
              <i class="<%= category.icon %> icon"></i>
              <%= category.name %>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
  <div id="search-button" class="ui dropdown item">
    FILTER
  </div>

  <!-- SEARCH BAR -->
  <div class="right menu">
    <div class="ui right aligned category search item">
      <div class="ui transparent icon input">
        <input class="prompt" type="text" placeholder="Explore...">
        <i class="search link icon"></i>
      </div>
      <div class="results"></div>
    </div>
  </div>
</div>

<div style="height:90px"></div>

<script>
  $("#when-select").dropdown();
  $("#where-select").dropdown();
  $("#categories-select").dropdown();
  $("#main-menu").dropdown();
</script>
