<div class="ui menu fixed">
  <div id="main-menu" class="ui header dropdown icon item">
    <%= image_tag("face.png", :class => "ui centered image mini") %>
    <div class="menu">
      <!-- TODO: if user_role: admin -->
      <%= link_to dashboard_path, class: 'ui icon item' do %>
        <i class="line chart icon"></i>
        Dashboard
      <% end %>
      <div class="item">
        <i class="empty star icon"></i>
        Saved
      </div>
      <div class="item">
        <i class="database icon"></i>
        Collections<div class="ui label" style="margin-left:15px;">12</div>
      </div>
      <div class="item">
        <i class="options icon"></i>
        Settings
      </div>
      <div class="item">
        <i class="alarm outline icon"></i>
        Notifications
      </div>
      <div class="item">
        <i class="payment icon"></i>
        Payment Info
      </div>
      <%= link_to root_url, class: 'ui icon item' do %>
        <i class="comment outline icon" style="margin-right:5px"></i>
        Text Ferris
      <% end %>
    </div>
  </div>
  <!-- DATE RANGE SELECTION -->
  <div class="item">
    <div id="when-select" class="ui floating dropdown labeled icon button basic">
      <i class="calendar icon"></i>
      <span class="text">When?</span>
      <div class="menu">
        <div class="item" data-value="1">
          Today
        </div>
        <div class="item" data-value="2">
          Tomorrow
        </div>
        <div class="item" data-value="3">
          This Week
        </div>
        <div class="item" data-value="4">
          This Weekend
        </div>
        <div class="item" data-value="5">
          Next Two Weeks
        </div>
      </div>
    </div>
  </div>
  <!-- LOCATION SELECTION -->
  <div class="item">
    <div id="where-select" class="ui floating dropdown search labeled icon button basic">
      <i class="marker icon"></i>
      <span class="text">Where?</span>
      <div id="where-select" class="menu">
        <div class="item" data-value="0">
          <i class="location arrow icon"></i>
          Near Me
        </div>
        <div class="ui divider"></div>
        <div class="item" data-value="1">
          Boston
        </div>
        <div class="item" data-value="2">
          Cambridge
        </div>
        <div class="item" data-value="3">
          Somerville
        </div>
        <div class="item" data-value="4">
          Back Bay
        </div>
        <div class="item" data-value="5">
          North End
        </div>
        <div class="item"data-value="6">
          Downtown
        </div>
      </div>
    </div>
  </div>
  <!-- CATEGORY SELECTION -->
  <div class="item">
    <div id="tags-select" class="ui dropdown labeled icon button basic multiple search selection" style="max-width: 900px !important;">
      <i class="tags icon"></i>
      <span class="text">What?</span>
      <div class="menu">
        <div class="item" data-value="0">
          <i class="music icon"></i>
          Concerts
        </div>
        <div class="item" data-value="1">
          <i class="road icon"></i>
          Road Trip
        </div>
        <div class="item" data-value="2">
          <i class="dive bar icon"></i>
          Dive Bar
        </div>
        <div class="item" data-value="3">
          <i class="cocktail icon"></i>
          Drinks
        </div>
        <div class="item" data-value="4">
          <i class="paint brush icon"></i>
          Art
        </div>
        <div class="item" data-value="5">
          <i class="lab icon"></i>
          Science
        </div>
        <div class="item" data-value="6">
          <i class="food icon"></i>
          Food
        </div>
        <div class="item" data-value="7">
          <i class="coffee icon"></i>
          Coffee
        </div>
        <div class="item" data-value="8">
          <i class="tree icon"></i>
          Outdoors
        </div>
      </div>
    </div>
  </div>

  <!-- SEARCH BAR -->
  <div class="right menu">
    <div class="ui right aligned category search item">
      <div class="ui transparent icon input">
        <input class="prompt" type="text" placeholder="Explore...">
        <i class="search link icon"></i>
      </div>
      <div class="results"></div>
    </div>
  </div>
</div>

<div style="height:90px"></div>

<script>
  $("#when-select").dropdown({
    onChange: function (val) {
      alert(val);
    }
  });

  $("#where-select").dropdown({
    onChange: function (val) {
      alert(val);
    }
  });

  $("#tags-select").dropdown({
    onChange: function (val) {
      alert(val);
    }
  });

  $("#main-menu").dropdown({
    onChange: function (val) {
      alert(val);
    }
  });
</script>
